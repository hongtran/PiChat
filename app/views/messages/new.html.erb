<h1>New message</h1>
<%= form_for [@user, @message] do |f| %>
  <% unless @message.errors.empty? %>
    <div class="alert alert-danger">
      <%= @message.errors.full_messages.to_sentence %>
    </div>
  <% end %>
  <div class="form-group">
  	<%= f.label :recipient_id, class: "form-control-label" %>
  	<%= f.select(:recipient_id, @users.all.collect{|u| [u.name, u.id]}, {prompt: "Select friend"}, {:multiple => true, class: "form-control"})%>
  </div>
  <div class="form-group">
  	<%= f.label :title, class: "form-control-label" %>
  	<%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="action">
  	<%= f.submit %>
  </div>
<% end %>